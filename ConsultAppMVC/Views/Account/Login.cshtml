<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <section>
            <form asp-controller="Account" asp-action="Login">
                <h4>Используйте ваш аккаунт для входа.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label>Имя пользователя</label>
                    <input type="text" name="username" class="form-control" placeholder="Имя пользователя" required>
                    @*<span asp-validation-for="Input.Email" class="text-danger"></span>*@
                </div>
                <div class="form-group">
                    <label>Пароль</label>
                    <input type="password" name="password" class="form-control" placeholder="Пароль" required>
                    @*<span asp-validation-for="Input.Password" class="text-danger"></span>*@
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Вход</button>
                </div>
                <div class="form-group">
                    <p>
                        <a asp-controller="Account" asp-action="Register">Зарегистрироваться как новый пользователь</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>
